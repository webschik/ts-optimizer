{
  "extends": "eslint:recommended",
  "parser": "@typescript-eslint/parser",
  "env": {
    "jest": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "modules": true
    },
    "useJSXTextNode": true,
    "project": "./tsconfig.json",
    "extraFileExtensions": [".ts", ".tsx"]
  }
}