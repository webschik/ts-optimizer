{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "lib",
    "jsx": "react",
    "declaration": true,
    "importHelpers": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "strict": true,
    "pretty": true,
    "removeComments": true,
    "lib": [
      "esnext"
    ]
  },
  "exclude": [
    "node_modules",
    "__tests__",
    "lib"
  ]
}